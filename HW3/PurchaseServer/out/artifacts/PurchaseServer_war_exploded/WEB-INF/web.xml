<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <servlet>
    <servlet-name>PurchaseServlet</servlet-name>
    <servlet-class>PurchaseServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ItemStoreServlet</servlet-name>
    <servlet-class>ItemStoreServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ItemTopNServlet</servlet-name>
    <servlet-class>ItemTopNServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PurchaseServlet</servlet-name>
    <url-pattern>/purchase/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ItemStoreServlet</servlet-name>
    <url-pattern>/items/store/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ItemTopNServlet</servlet-name>
    <url-pattern>/items/top10/*</url-pattern>
  </servlet-mapping>
</web-app>